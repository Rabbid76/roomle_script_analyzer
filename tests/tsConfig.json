{
    "compilerOptions": {
      "module": "nodenext",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "outDir": "../built"
    },
    "paths": {
        "@/*": [
          "tests/*"
        ]
      },
    "include": [
        "../src/**/*.ts",
        "../tests/**/*.ts"
      ],
      "exclude": [
        "node_modules"
      ]
}